extends ../layouts/main.pug

block styles 
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        form.product-form(action=editing?"/admin/edit-product":"/admin/add-product", method="POST")
            .form-control
                label(for="title") Title
                input(type="text", name="title", value=editing?product.title:'')#title

                label(for="img") Image URL
                input(type="text", name="imgURL", value=editing?product.imgURL:'')#img

                label(for="price") Price
                input(type="number", name="price", step="0.01", value=editing?product.price:'')#price

                label(for="description") Description
                input(type="textarea", name="description", value=editing?product.description:'')#description

                if(editing)
                    input(type="hidden", name="productID", value=product._id)

            if (editing)
                button.btn(type="submit") Edit Product
            else
                button.btn(type="submit") Add Product